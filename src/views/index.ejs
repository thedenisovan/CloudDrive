                <%- include('./partials/feature', {imgSrc: './assets/bolt-2.svg', header: 'Grid & List Views', content: 'Switch between grid and list view modes for browsing your files'}) %>
                <%- include('./partials/feature', {imgSrc: './assets/storage.svg', header: 'Storage Limits', content: '10MB for personal accounts, 100MB for the shared public account'}) %>
            </div>
        </section>
        <section id="cta">
            <div id="cta-div">
                <h4>Ready to Get Started?</h4>
                <p>Join SilverCloud today and experience simple, organized cloud storage</p>
                <div id="cta-buttons">
                    <a href="/signup"><button>Create Account</button></a>
                    <a href="/signin"><button>Sign In</button></a>
                </div>
            </div>
        </section>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
