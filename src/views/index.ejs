            <header>
                <h4>Everything You Need</h4>
                <p>Built with modern web technologies for a seamless experience</p>
            </header>
            <div id="feature-cont">
                <%- include('./partials/feature', {imgSrc: './assets/structure.svg', header: 'Smart Organization', content: 'Organize files into default folders (Documents, Images, GIFs, Other) or create custom folders'}) %>
