generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  surname  String
  password String
  profile  Profile?
}

// Model representing user/folder relationship
model Profile {
  id          Int      @id @default(autoincrement())
  folders     Folder[]
  usedStorage Float    @default(0)
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
}

model Folder {
  id        Int     @id @default(autoincrement())
  name      String
  fileId    File[]
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId Int
}

model File {
  id        Int      @id @default(autoincrement())
  data      String
  name      String   @unique
  folder    Folder   @relation(fields: [folderId], references: [id])
  folderId  Int
  createdAt DateTime @default(now())
  size      Int
}
