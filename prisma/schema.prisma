generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  surname  String
  password String
  folders  Folder[]
}

model Folder {
  id     Int    @id @default(autoincrement())
  name   String @unique
  fileId File[]
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model File {
  id       Int    @id @default(autoincrement())
  data     Bytes
  folder   Folder @relation(fields: [folderId], references: [id])
  folderId Int
}
